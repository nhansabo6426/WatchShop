@model ShopBanHang.Models.Product
@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Views/Shared/_Layout_Nguoidung.cshtml";
}
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1">
                            <img src="@Model.Images1" />
                        </div>
                        <div class="tab-pane" id="pic-2">
                            <img src="@Model.Images2" />
                        </div>
                        <div class="tab-pane" id="pic-3">
                            <img src="@Model.Images3" />
                        </div>
                        <div class="tab-pane" id="pic-4">
                            <img src="@Model.Images4" />
                        </div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Model.Images1" />
                            </a>
                        </li>
                        <li>
                            <a data-target="#pic-2" data-toggle="tab">
                                <img src="@Model.Images2" />
                            </a>
                        </li>
                        <li>
                            <a data-target="#pic-3" data-toggle="tab">
                                <img src="@Model.Images3" />
                            </a>
                        </li>                      
                        <li>
                            <a data-target="#pic-4" data-toggle="tab">
                                <img src="@Model.Images4" />
                            </a>
                        </li>
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Name</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star-half checked"></span>
                        </div>

                    </div>
                    <p class="product-description1">
                        @Model.Description
                    </p>
                    <p class="vote">
                    <p>Chất liệu dây: <span>@Model.ProductType.Name</span></p>
                    </p>
                    <span class="vote">
                        <p>
                            Xuất xứ:
                            <span>@Model.Origin</span>
                        </p>
                    </span>
                    <span class="vote">
                        <p>
                            Thương hiệu:
                            <span>@Model.Trade.Name</span>
                        </p>
                    </span>
                    <br />
                    <h4 class="price">
                        GIÁ HIỆN TẠI:
                        <span>@Model.Price</span>
                    </h4>
                    <br />
                    <!-- item-property .// -->
                    <div class="action">
                        <a class="add-to-cart btn btn-warning" href="@Url.Action("ThemVaoGio", "Home", 
                          new { sanPhamID = Model.ProductID })">Add to cart</a>
                        <button class="like btn btn-default" type="button">
                            <span class="fa fa-heart"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


