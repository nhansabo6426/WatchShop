@model ShopBanHang.Models.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  
    <div>
        <h4>Xóa tài khoản</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên người dùng
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
    
            <dt>
                Địa chỉ
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                Số điện thoại
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.PhoneNumbers)
            </dd>
    
            <dt>
                Tên tài khoản
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Usernames)
            </dd>
    
            <dt>
                Mật khẩu
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Password)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.HashPassword)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.HashPassword)
            </dd>
    
            <dt>
                Quyền truy cập
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.AccessManagement)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-warning"
                 onClick="return confirm('Bạn có chắc chắn muốn xóa?')" style="float:right"/> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
